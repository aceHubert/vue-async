{
  "name": "vue-async",
  "version": "1.0.3",
  "description": "Vue Async",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/aceHubert/vue-async.git"
  },
  "scripts": {
    "build:es": "lerna run build:es --sort --parallel",
    "build": "lerna run build --sort --stream --scope=@vue-async/*",
    "clean": "lerna clean --yes",
    "lint": "lerna run lint --parallel --stream",
    "lint:fix": "lerna run lint:fix --parallel",
    "prettier": "node ./scripts/prettier.js",
    "prettier:all": "node ./scripts/prettier.js write",
    "changelog": "node ./scripts/genChangelog.js",
    "commit": "git-cz",
    "prepublishOnly": "yarn install && yarn changelog && yarn build",
    "release": "lerna publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.7.4",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "child_process": "^1.0.2",
    "commitizen": "^4.0.3",
    "concurrently": "^5.1.0",
    "core-js": "^3.6.5",
    "cross-env": "^6.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "glob-gitignore": "^1.0.14",
    "husky": ">=1",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.0",
    "prettier": "^2.0.5",
    "rollup": "^1.27.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^1.4.2",
    "rollup-plugin-license": "^2.0.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2",
    "util": "^0.12.1",
    "vuepress": "^1.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lerna run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "docs"
    ]
  }
}
