{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "importHelpers": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "composite": true,
    "types": ["webpack-env", "vuetify"],
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"]
    }
  },
  // scoped package types missing
  "files": ["../packages/module-loader/types/index.d.ts", "../packages/module-loader/src/globals.d.ts"],
  "include": [
    "src/**/*",
    // https://github.com/TypeStrong/ts-loader/issues/905
    "src/**/*.json",
    "types"
  ],
  "references": [{ "path": "../packages/module-loader" }, { "path": "../packages/utils" }]
}
