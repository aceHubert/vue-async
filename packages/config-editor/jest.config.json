{
  "verbose": true,
  "setupFiles": ["<rootDir>/test/setupTest.js"],
  "setupFilesAfterEnv": ["<rootDir>/test/helpers/wait-for-update.js"],
  "moduleFileExtensions": ["ts", "js"],
  "testMatch": ["<rootDir>/test/**/*.(test|spec).{js,ts}"],
  "transform": {},
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.test.json"
    }
  },
  "preset": "ts-jest"
}
