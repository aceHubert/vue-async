{
  "packages": ["packages/module-loader", "docs"],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "gitTagVersion": true,
      "gitReset": true,
      "allowBranch": ["master", "next"],
      "ignoreChanges": [
        "*/package.json",
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/playground/**",
        "**/*.md",
        "**/test/**",
        "**/dev/**",
        "**/src/version.ts"
      ],
      "message": "chore(release): ðŸ˜Š publish"
    }
  },
  "version": "independent",
  "changelog": {
    "repo": "aceHubert/vue-async",
    "labels": {
      "feat": ":rocket: New Feature",
      "bug": ":bug: Bug Fix",
      "breaking": ":boom: Breaking Change"
    },
    "cacheDir": ".changelog"
  }
}
