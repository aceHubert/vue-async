{
  "packages": ["packages/*", "docs"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "gitTagVersion": true,
      "gitReset": true,
      "allowBranch": ["master", "feature/build"],
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md",
        "**/test/**",
        "**/dev/**"
      ],
      "message": "chore(release): ðŸ˜Š publish %s"
    }
  },
  "version": "independent",
  "changelog": {
    "repo": "aceHubert/vue-async",
    "labels": {
      "feat": ":rocket: New Feature",
      "bug": ":bug: Bug Fix",
      "breaking": ":boom: Breaking Change"
    },
    "cacheDir": ".changelog"
  }
}
