{
  "packages": ["packages/*", "docs"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": false,
      "gitTagVersion": false,
      "gitReset": false,
      "allowBranch": ["master", "bug-fix"],
      "ignoreChanges": ["**/CHANGELOG.md", "**/node_modules/**", "**/package.json", "**/*.md", "**/test/**"],
      "message": "chore(release): publish"
    }
  },
  "version": "independent",
  "changelog": {
    "repo": "aceHubert/vue-async",
    "labels": {
      "feat": ":rocket: New Feature",
      "bug": ":bug: Bug Fix",
      "breaking": ":boom: Breaking Change"
    },
    "cacheDir": ".changelog"
  }
}
